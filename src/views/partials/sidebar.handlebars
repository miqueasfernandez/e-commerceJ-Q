<div id="sidebar" class="sidebar open">
  <button class="toggle-btn" onclick="toggleSidebar()">☰</button>

  <nav class="sidebar-links">
    <a href="/api/sessions/current">🏠 Home</a>
    <a href="/api/products">🛍️ Products</a>
    
  </nav>
  <form action="/api/sessions/logout" method="POST" class="form-logout"><button type="submit" class="logout-button">🚪 Logout</button></form>
</div>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 200px;
    background-color: #222;
    color: white;
    padding: 20px;
    transition: transform 0.3s ease;
    z-index: 1000;
  }
  .sidebar.open {
    transform: translateX(0);
  }
  .sidebar.closed {
    transform: translateX(-100%);
  }
  .toggle-btn {
    position: absolute;
    top: 10px;
    right: -40px;
    width: 40px;
    height: 40px;
    background-color: #222;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 1.5rem;
  }
  .sidebar-links a,
  .sidebar-links button {
    display: block;
    color: white;
    text-decoration: none;
    margin: 20px 0;
    background: none;
    border: none;
    font-size: 1rem;
    text-align: left;
    cursor: pointer;
  }
  .sidebar-links button.logout-link:hover,
  .sidebar-links a:hover {
    text-decoration: underline;
  }
</style>

<script>
  function toggleSidebar() {
    const sidebar = document.getElementById("sidebar");
    sidebar.classList.toggle("closed");
    sidebar.classList.toggle("open");
  }
</script>
